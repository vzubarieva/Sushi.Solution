<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>@ViewBag.PageTitle</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
        integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/styles.css">
</head>

<body class="bamboo">
    <div class="container">
        <header class="pageHeader">
            @await Html.PartialAsync("NavBar")
        </header>

        <div class="row">
            <div class="col1">
                <img class="imgeNav" src="/img/logo2.png">
                <h3 id="sideCommentBox">If you love sushi, you'll love Chihiro's!</h3>
                @* <p> *Business Hours*
                    <br>Fri – Sat : 11:00am – 10:00pm
                    <br>Sun – Thur : 4:00pm – 10:00pm
                    </p> *@
                <div id="slider">
                    <figure>
                        <img src="~/img/sushi1.jpg">
                        <img src="~/img/sushi2.jpg">
                        <img src="~/img/sushi3.jpg">
                        <img src="~/img/sushi4.jpg">
                        <img src="~/img/sushi1.jpg">
                    </figure>
                </div>



            </div>
            <div class="col2">
                @RenderBody()
            </div>
        </div>
    </div>

</body>

</html>
